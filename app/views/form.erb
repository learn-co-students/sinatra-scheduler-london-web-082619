<form action="/courses/<%=@course.id%>" method="post">

<label for="name">Name: </label>
<input type="text" name="course[name]" value="<%=@course.name%>"> <br><br>

<label for="name">Professor: </label>
<input type="text" name="course[professor]" value="<%=@course.professor%>"> <br><br>

<label for="name">Credits: </label>
<input type="text" name="course[credits]" id="" value="<%=@course.credits%>">

<br><br>

<% if @course.id %>
 <input type="hidden" name="_method" value="patch">
<% end %>

<input type="submit" value="Save Course">

</form>